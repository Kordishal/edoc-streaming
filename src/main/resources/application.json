{
  "sources": {
    "edoc-path": ".",
    "crossref-index": "t",
    "crossref-type": "fawe"
  },
  "elasticsearch": {
    "host": "localhost",
    "port": 9200
  },
  "reconciling": {
    "title": {
      "fuzziness": {
        "from": 0,
        "to": 2,
        "step": 1
      },
      "boost": {
        "from": 0,
        "to": 2,
        "step": 0.5
      }
    },
    "person": {
      "fuzziness": {
        "from": 0,
        "to": 2,
        "step": 1
      },
      "boost": {
        "from": 0,
        "to": 2,
        "step": 0.5
      }
    },
    "isbn": {
      "boost": {
        "from": 0,
        "to": 2,
        "step": 0.5
      }
    },
    "issn": {
      "boost": {
        "from": 0,
        "to": 2,
        "step": 0.5
      }
    },
    "date": {
      "boost": {
        "from": 0,
        "to": 2,
        "step": 0.5
      }
    }
  },
  "output": {
    "index-prefix": "output",
    "index-counter-offset": 0,
    "type": "output",
    "logfile": "./log.log"
  }
}